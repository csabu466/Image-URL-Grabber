{
  "manifest_version": 2,
  "name": "Image URL Grabber",
  "version": "1.1",
  "description": "Grabs all image URLs on the page and copies them to the clipboard.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
